@model Depozyto.Models.AccountModel

<center>
	

    <div class="card text-white bg-secondary mb-3" style="max-width: 500px;">

        <div class="card-header"><h2>Dodaj nowe konto</h2></div>
        <div class="card-body">
            <div class="text-center" style="
			width: 400px;
			margin: auto;">

                <form id="Login" asp-action="Add" asp-controller="Accounts" method="post">
                    <fieldset>
                        <div class="row align-items-center justify-content-center">
                            <div class="form-group col-md-6">
                                <label asp-for="num" class="control-label">Numer konta</label>
                                <input asp-for="num" class="form-control" placeholder="Numer Konta" type="text" />
                                <span asp-validation-for="num" class="text-danger"></span>
                            </div>
                        </div>
                    </fieldset>

                    @if (Html.DropDownList("Currency") == null)
                    {
                        <h1>Nie masz żadnych walut</h1>
                    }
                    else
                    {
                        <h5>Konto w walucie</h5>
                        @Html.DropDownList("Currency",null,"Wybierz walutę", new{@class = "form-select", @name="currency"})
                    }

                    <div class="row">
                        <div class="form-group col-md-12 text-center mt-md-2">
                            <input type="submit" value="Stwórz" class="btn btn-primary" />
                        </div>
                    </div>

                </form>
                <br />
                <a class="btn btn-danger" asp-controller="DashBoard" asp-action="Cancel">Anuluj</a>
                

            </div>
        </div>
    </div>













</center>



