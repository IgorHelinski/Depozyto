@model IEnumerable<Depozyto.Models.HistoryModel>
@{
    ViewData["Title"] = "Dashboard";
}
<html>
<body>
    <div class="container">
        <div>
            

        <div>
            <h3>Konta</h3>




        </div>
        <div>
            <h3>Historia ostatnich tranzakcji</h3>
            <table class="table">
                <thead>
                    <tr>

                        <th>
                            <p>Nadawca płatności</p>
                        </th>
                        <th>
                            <p>Adresat płatności</p>
                        </th>
                        <th>
                            <p>Kwota w <bold>PLN</bold></p>
                        </th>
                        <th>
                            <p>Tytuł</p>
                        </th>
                        <th>
                            <p>Data</p>
                        </th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>

                            <td>
                                @item.FromEmail
                            </td>
                            <td>
                                @item.ToEmail
                            </td>
                            <td>
                                @item.Amount
                            </td>
                            <td>
                                @item.Title
                            </td>
                            <td>
                                @item.Date
                            </td>
                        </tr>
                    }
                </tbody>
            </table>


        </div>
    
    </div>
</body>
</html>

